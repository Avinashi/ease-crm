<!DOCTYPE html>
<html>
<head>
    <title>Dynamic Groups</title>
    <# include "_authentication_user.espx" #>

    <script src="/js/commonResource.js"></script>

    <link href="/css/customCSS.css" rel="stylesheet" type="text/css">

    <script src="/js/easeModules/groups/groupsList.js"></script>

    <style>
        .customBadge{
        vertical-align:middle;
        margin-top: -3px;"
    </style>
</head>
<body>

<div>
    <# include "easeCRMHeader.espx"; #>
</div>

<# include "/groups/groupsHeader.espx" #>


<div class="col-lg-9" style="margin-top:20px">

    <div class="" >
        <# start list for easecrmdynamicgroups;

            include when easecrmdynamicgroups.moduleid == "1" and (easecrmdynamicgroups.created_by == "<# [session.useruuid]#>");
            show 10 rows per page;
            sort by title;
            hide top pagers;
             #>
            <# start header #>
                <div class="">
                <h6 style="display:inline-block">
                    Groups
                    <span class="badge customBadge" ><# numberofrows#></span>
                </h6>

                </div>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Title</th>
                            <th style="width:50px">Action</th>
                        </tr>
                    </tbody>

            <# end header #>

            <# start row #>
                    <tr>
                        <td>
                            <a href="/groups/dynamicGroups/contacts/details?id=<# easecrmdynamicgroups.uuid#>">
                                <# easecrmdynamicgroups.title#>
                            </a>
                        </td>
                        <td style="text-align:center">
                            <a href="#">
                                <span class="fui-cross" style="color:red;" onclick="onDeleteDynamicGroup('<# easecrmdynamicgroups.uuid #>','/groups/dynamicGroups/contacts')"></span>
                            </a>
                        </td>
                    </tr>

            <# end row #>
            <# start footer #>
            </table>
            <# end footer #>

            <# start no results #>
                <div style="margin-left:30px">
                    No Group Exits!!
                </div>
            <# end no results #>

        <# end list #>
    </div>


</div>


<style>
    .nav-pills > li.active > a, .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus{
        background-color:#32B69C
    }
</style>
</body>
</html>