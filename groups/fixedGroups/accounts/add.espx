<!DOCTYPE html>
<html>
<head>
    <title>Add Fixed Group</title>
    <# include "_authentication_user.espx" #>

    <script src="/js/commonResource.js"></script>

    <link href="/css/customCSS.css" rel="stylesheet" type="text/css">

    <script src="/js/easeCRMConstants.js"></script>
    <script src="/js/easeModules/groups/addFixedGroup.js"></script>


</head>
<body>

<div>
    <# include "easeCRMHeader.espx"; #>
</div>


<div class="addContactFixedGroupBody">
<div class="form-group">
<label>Group Title</label>
    <input class="form-control" id="fixedGroupTitle" required placeholder="Enter group title...">
</div>


<div class="row col-lg-12" >

<# start list for easecrmaccounts;
    if("<# [session.role]#>"=="2"){
        include when (easecrmaccounts.created_by == "<# [session.useruuid]#>" or easecrmaccounts.assignedTo == "<# [session.useruuid]#>");
    }
    sort by easecrmaccounts.name;
#>
    <# start header#>
        <label>Accounts
            <span class="badge" style="margin-left:5px"><# numberofrows#></span>
        </label>
    <# end header#>
    <# start row #>
        <div class="col-lg-12">
            <label class="checkbox" for="checkbox2">
                <input type="checkbox" class="accounts" data-toggle="checkbox"
                name="<# easecrmaccounts.uuid #>">
                <# easecrmaccounts.name #>
            </label>
        </div>
    <# end row #>

    <# start no results #>
        No Account Exits!!
    <# end no results #>
<# end list #>

    <div>

        <a class="btn btn-default pull-right" href="/groups/fixedGroups/accounts">Cancel</a>

        <button class="btn btn-primary pull-right" onclick="saveAccountsIntoFixedGroup();" style="margin-right:10px"
        disable="">Save</button>
    </div>
</div>

</div>

</body>
</html>